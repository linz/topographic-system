{
  "plugins": ["node-workspace"],
  "packages": {
    "packages/data": {},
    "packages/kart": {},
    "packages/map": {},
    "packages/shared": {},
    "packages/validation": {
      "release-type": "python",
      "package-name": "topography-validation",
      "extra-files": [
        {
          "path": "packages/validation/pyproject.toml",
          "type": "toml",
          "jsonpath": "$.project.version"
        },
        {
          "path": "uv.lock",
          "type": "toml",
          "jsonpath": "$.package[?(@.name.value=='topographic-system')].version"
        },
        {
          "path": "uv.lock",
          "type": "toml",
          "jsonpath": "$.package[?(@.name.value=='topographic-system-validation')].version"
        }
      ]
    },
    ".": {
      "include-component-in-tag": false
    }
  },
  "group-pull-request-title-pattern": "release: v${version}",
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
