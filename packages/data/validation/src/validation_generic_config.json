        },
        {
            "table": "landuse",
            "column": "landuse_type",
            "where": "feature_type = 'mine'",
            "message": "Landuse features must have a landuse_type attribute for type mine"
        },
        {
            "table": "water_point",
            "column": "orientation",
            "where": "(feature_type = 'waterfall' OR feature_type = 'soakhole')",
