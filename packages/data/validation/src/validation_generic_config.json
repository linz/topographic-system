    "query_rules": [
        {
            "table": "vegetation",
            "column": "species",
            "where": "feature_type = 'exotic'",
            "rule": "species IN ('coniferous', 'non-coniferous')",
            "message": "Exotic vegetation must have species as coniferous or non-coniferous"
        }
    ],
    "is_multipart": [
        {
            "table": "building",
            "message": "Building features must not be multipart"
        }
    ]
